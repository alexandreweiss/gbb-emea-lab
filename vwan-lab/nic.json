{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "nicName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "subnetId": {
      "type": "string"
    },
    "enableForwarding": {
      "type": "bool"
    },
    "createPublicIp": {
      "type": "bool"
    }
  },
  "functions": [],
  "variables": {
    "publicIpId": "[if(parameters('createPublicIp'), json(format('{{ id: {0} }}', resourceId('Microsoft.Network/publicIPAddresses', parameters('nicName')))), json('notCreated'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2020-08-01",
      "name": "[parameters('nicName')]",
      "location": "[parameters('location')]",
      "properties": {
        "enableIPForwarding": "[parameters('enableForwarding')]",
        "ipConfigurations": [
          {
            "name": "ipconfig0",
            "properties": {
              "primary": true,
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('subnetId')]"
              },
              "publicIPAddress": "[variables('publicIpId')]"
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', parameters('nicName'))]"
      ]
    },
    {
      "condition": "[parameters('createPublicIp')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2020-08-01",
      "name": "[parameters('nicName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard",
        "tier": "Regional"
      },
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    }
  ],
  "outputs": {
    "nicId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicName'))]"
    },
    "nicPrivateIp": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/networkInterfaces', parameters('nicName'))).ipConfigurations[0].properties.privateIPAddress]"
    }
  },
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.3.126.58533",
      "templateHash": "1744959825330471983"
    }
  }
}